<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="v0.1.post_labels" author="Abdul">
        <createTable tableName="post_labels">
            <column name="post_id" type="int">
                <constraints nullable="false" referencedTableName="posts" referencedColumnNames="id" foreignKeyName="fk_post"/>
            </column>
            <column name="label_id" type="int">
                <constraints nullable="false" referencedTableName="labels" referencedColumnNames="id" foreignKeyName="fk_label"/>
            </column>
        </createTable>
        <addUniqueConstraint tableName="post_labels" columnNames="post_id, label_id"/>
    </changeSet>
</databaseChangeLog>