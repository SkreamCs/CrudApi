<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
     <changeSet id="v0.1.post" author="Abdul">
          <createTable tableName="posts">
         <column name="id" type="int" autoIncrement="true">
             <constraints primaryKey="true" />
         </column>
              <column name="writer_Id" type="int">
                  <constraints referencedTableName="writers" referencedColumnNames="id" foreignKeyName="fk_writer"/>
              </column>
              <column name="content" type="varchar(45)"/>
              <column name="created" type="datetime"/>
              <column name="updated" type="datetime"/>
              <column name="PostStatus" type="varchar(45)"/>
     </createTable>
     </changeSet>
</databaseChangeLog>
