<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="v1.writer" author="Abdul">
        <createTable tableName="writer_table">
            <column name="id" type="int">
                <constraints primaryKey="true"/>
            </column>
            <column name="firstName" type="varchar(45)"/>
            <column name="lastName" type="varchar(45)"/>
            <column name="PostStatus" type="varchar(45)"/>
            <column name="writer_post" type="json"/>
        </createTable>
    </changeSet>
</databaseChangeLog>